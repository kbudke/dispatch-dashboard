<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, :placeholder: "New Password", autocomplete: "off" %>
        <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Confirm new Password" autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
