<br /><br />
<div class="row">
  <div class="col-md-12">
    <div class="login-page">
      <div class="form" style="padding-top:5px;">
        <div class="special register-form">
         <h2 style="margin-bottom:15px;">Sign Up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>

             <div class="form-group">
              <%= f.text_field :phone_number, placeholder: "Phone Number" %>
            </div>

              <div class="form-group">
              <%= f.text_field :username, placeholder: "Username" %>
            </div>

           <div class="form-group">
              <%= f.text_field :address, placeholder: "Address" %>
            </div>

            <div class="form-group">
                <%= f.hidden_field :role, value: "guest" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %><% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
            </div>
            <div class="actions">
              <%= f.button :Submit, class: "btn button btn-success" %>
            </div>
             <p class="message">Already registered? <a>Sign In</a></p>
          <% end %>
        </div>

        <div class="special login-form">
        <h2 style="margin-bottom:15px;">Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
           <p class="message" style="margin-top:0px; float:right;"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p><br />
          <% if devise_mapping.rememberable? -%>
          <div class="message" style="margin-top:0px; text-align:left;">

              <div style="width:20px; display:inline-block;"><%= f.check_box :remember_me %></div>Remember me

            </div>
          <% end -%>
          <div class="actions" style="margin-top:10px;">
          <%= f.button "Log in", class: "btn button btn-success" %>

          </div>
          <p class="message" style="margin-bottom:-15px;"> Not registered? <a> &nbsp; Create an account</a></p>
          
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
