     body, table { font-family: sans-serif;}
     .table-striped { border-collapse: collapse; border: 1px solid #38678f; border-radius:10px; font-size: .9em;}
     td { padding: 2px;}
     th {padding: 8px; background: steelblue;  font-weight: lighter;
  text-shadow: 0 1px 0 #38678f;
  color: white;
  border: 1px solid #38678f;
  box-shadow: inset 0px 1px 2px #568ebd;transition: all 0.2s;}
    
 
     
     /* Scrollability of table */
   table { width: 100%; } /* fixed width table */
    thead tr { width: 100%; display:block;} /* makes it sizeable */
     .sortable tbody { 
       max-height: 350px; /* height of scrollable area */
       overflow: scroll;
       display:block;
      width: 100%; /* fill the box */
     }

     tbody { 
      width: 100%; /* fill the box */
      display: block;
     }

     thead th { width: 250px;} /* fixed width for THs */
     tbody td { width: 234px;} /* fixed width for TDs */
     /* the tbody needs to be 16px less than the thead, for the scrollbar */
 
     
    .smallbody { 
       display: block; /* makes it sizeable */
       height: 200px; /* height of scrollable area */
       overflow: scroll;
      width: 100%; /* fill the box */
     }

